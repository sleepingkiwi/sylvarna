{#
  CTA
  Call to action button.
  If there is text we render a button.
  If there is NO URL - we link to the brochure popup anchor
  ---
  CMS _data:
    -
  ---
  args:
    text=''
      Optional
      String
    url=''
      Optional
      String
    align='left'
      OneOf: ['left', 'right', 'center']
  ---
#}

{# import components #}
{% from "components/Wrap.njk" import Wrap with context %}

{% macro CTA(
  text='',
  url='',
  align='left'
) %}
{% if text %}
  <div
    class="CTA CTA--align-{{ align }}{{ ' js--launch-popup' if not url }}"
  >
    {% call Wrap(flavour='readable', flows=true) %} {# readable width Wrap with flow #}
      <a href="{{ url if url else '#brochure'}}">
        {{ text }}
      </a>
    {% endcall %} {# wrap #}
  </div>
{% endif %}
{% endmacro %}
